<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>  

	<package name="timesystem" extends="struts-default">
	
		<result-types>
		<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"></result-type>
        </result-types>
        

		<!--  http://localhost:8080/helloworld/HelloWorld.action -->
		<action name="HelloWorld" class="com.herguan.cs562.action.HelloWorld">
			<result>/WEB-INF/helloworld.jsp</result>
		</action>
		
		<action name="*Login" method="{1}" class="com.herguan.cs562.action.Login">
			<result name="show" type="tiles">login</result>
		</action>
		<action name="home" method="login" class="com.herguan.cs562.action.Login">
			<result name="success" type="tiles">home</result>
		</action>
		<action name="*Link" method="{1}" class="com.herguan.cs562.action.LinkAction">
            <result name="welcome" type="tiles">welcome</result>
            <result name="friends" type="tiles">friends</result>
            <result name="office" type="tiles">office</result>
        </action>
        
        <action name="*Time" method="{1}" class="com.herguan.cs562.action.TimesheetAction">
            <result name="view" type="tiles">viewTime</result>
            <result name="submit" type="tiles">submitTime</result>
            <result name="approve" type="tiles">approveTime</result>
        </action>
        
        <action name="createUser" method="createUser" class="com.herguan.cs562.action.AdminAction">
            <result name="User" type="tiles">createUser</result>
        </action>
        <action name="createProject" method="createProject" class="com.herguan.cs562.action.AdminAction">
            <result name="Project" type="tiles">createProject</result>
        </action>
        <action name="createDepartment" method="createDepartment" class="com.herguan.cs562.action.AdminAction">
            <result name="Department" type="tiles">createDepartment</result>
        </action>
        
	</package>
</struts>

